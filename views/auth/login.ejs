<%- include('../include/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/auth.css">

</head>
<body>


    <%- include('../include/nav.ejs') %>
    <main class="card" style="border-radius: 1.5rem">
        <% if (errorMessage) { %>
        <div class="error_message"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <header class="card__header">
                <h1 class="product__title">Login</h1>
            </header> 
            <div class="form-control">
                <label for="email">Email Id</label>
                <input 
                class="<%= validationError.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" name="email" id="email" value="<%= oldInput.email %>">
            </div>

            <div class="form-control">
                <label for="pwd">Password</label>
                <input 
                class="<%= validationError.find(e => e.param === 'pwd') ? 'invalid' : '' %>"
                type="password" name="pwd" id="pwd" value="<%= oldInput.pwd %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit" style="border-radius: 2em;">Login</button>

            <div class="reset">
                <a href="/reset">Reset Password</a>
            </div>
        </form>
    </main>

    <%- include('../include/end.ejs') %>